<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".KhoiTaoDuLieu.KhoiTao_Activity"
    >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <pl.droidsonroids.gif.GifImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/gif"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/txLove"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="1dp"
               android:layout_weight="5"
               android:gravity="center"
               android:text="Chúc hai bạn luôn luôn hạnh phúc"
               android:textColor="@color/mauhongnhat"
               android:textSize="22sp"
               android:textStyle="bold" />
       </LinearLayout>
       <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"

               android:orientation="vertical"
               android:padding="10dp">

               <EditText
                   android:id="@+id/txTenBan"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Tên bạn nam"
                   android:inputType="text"
                   android:textColor="@color/mauhongnhat"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/txNguouiAy"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Tên bạn nữ"
                   android:inputType="text"
                   android:textColor="@color/mauhongnhat"
                   android:textStyle="bold" />





               <EditText

                   android:id="@+id/ngayyeunhau"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Ngày hai bạn yêu nhau"
                   android:textColor="@color/mauhongnhat"
                   android:textStyle="bold" />

               <Button
                   android:id="@+id/chonngay"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Chọn ngày"
                   android:textAllCaps="false"
                   android:textColor="@color/mauhongnhat"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/ngayhientai"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Ngày hiện tại"
                   android:textColor="@color/mauhongnhat"
                   android:textStyle="bold" />

               <CheckBox
                   android:id="@+id/dongy"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Đồng ý"
                   android:textColor="@color/mauhongnhat"
                   android:textStyle="bold" />



               <LinearLayout
                   android:layout_margin="20dp"
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <Button
                       android:textStyle="bold"
                       android:id="@+id/thaydoi"
                       android:layout_width="120dp"
                       android:layout_height="40dp"
                       android:background="@drawable/style6"
                       android:layout_gravity="center"
                       android:text="Thay đổi"
                       android:textAllCaps="false"
                       android:textColor="@color/white" />

                   <Button
                       android:layout_marginTop="10dp"
                       android:textStyle="bold"
                       android:id="@+id/huy"
                       android:layout_width="120dp"
                       android:layout_height="40dp"
                       android:background="@drawable/style6"
                       android:layout_gravity="center"
                       android:text="Hủy bỏ"
                       android:textAllCaps="false"
                       android:textColor="@color/white" />
               </LinearLayout>
               <TextView
                   android:layout_marginTop="50dp"
                   android:textStyle="bold"
                   android:textSize="10dp"
                   android:textColor="@android:color/darker_gray"
                   android:gravity="center_horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="DESIGN BY DevAndroid"/>



           </LinearLayout>

   </RelativeLayout>




</LinearLayout>