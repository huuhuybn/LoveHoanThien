<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".KhoiTaoDuLieu.KhoiTao_Activity"
    android:background="@drawable/style2">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/txLove"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="1dp"
              android:layout_weight="5"
              android:gravity="center"
              android:text="Chúc hai bạn luôn luôn hạnh phúc"
              android:textColor="@color/mauhongnhat"
              android:textSize="22sp"
              android:textStyle="bold" />
      </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/txTenBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên bạn"
                android:inputType="text"
                android:textColor="@color/mauhongnhat"
                android:textStyle="bold" />





            <EditText
                android:id="@+id/txNguouiAy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên người ấy"
                android:inputType="text"
                android:textColor="@color/mauhongnhat"
                android:textStyle="bold" />





            <EditText

                android:id="@+id/ngayyeunhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày hai bạn yêu nhau"
                android:textColor="@color/mauhongnhat"
                android:textStyle="bold" />

            <Button
                android:onClick="ChonNgayYeu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày"
                android:textAllCaps="false"
                android:textColor="@color/mauhongnhat"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ngayhientai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày hiện tại"
                android:textColor="@color/mauhongnhat"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/dongy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đồng ý"
                android:textColor="@color/mauhongnhat"
                android:textStyle="bold" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" />

            <Button
                android:id="@+id/khoitao"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/style6"
                android:layout_gravity="center"
                android:text="Khởi tạo"
                android:textAllCaps="false"
                android:textColor="@color/white" />
            <TextView
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="100dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESIGN BY DevAndroid"/>



        </LinearLayout>
    </ScrollView>




</LinearLayout>